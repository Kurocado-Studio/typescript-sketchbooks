{
  "name": "@kurocado-studio/daily-ui",
  "version": "0.0.0-semantically-released",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean && rm -rf .turbo node_modules pnpm-lock.yaml",
    "commitlint": "pnpm exec commitlint --edit .git/COMMIT_EDITMSG",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "prepare": "husky install",
    "prettier:check": "turbo run prettier:check",
    "prettier:fix": "prettier --check . --write && turbo run prettier:fix",
    "preview-storybook": "turbo run preview-storybook",
    "semantic-release": "pnpm -r --workspace-concurrency=1 exec -- npx --no-install semantic-release -e semantic-release-monorepo",
    "setup": "pnpm i",
    "typecheck": "turbo run typecheck",
    "ui:local:lib": "turbo run ui:local:lib && pnpm dev",
    "ui:canary:lib": "turbo run ui:canary:lib && pnpm dev",
    "ui:published:lib": "turbo run ui:published:lib",
    "ui:local:sync": "turbo run ui:local:sync",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@kurocado-studio/styleguide": "^2.5.2",
    "commitlint": "^19.8.1",
    "eslint": "9.27",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "3.5.3",
    "turbo": "^2.5.3"
  },
  "lint-staged": {
    "*.{ts,tsx,json,yml,css,md}": [
      "prettier --check . --write"
    ],
    "{apps,internal,packages}/**/*.{ts,tsx}": [
      "turbo run prettier:fix --",
      "turbo run lint:fix --",
      "turbo run lint --"
    ]
  },
  "engines": {
    "node": ">=20"
  },
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  }
}
