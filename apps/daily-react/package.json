{
  "name": "@kurocado-studio/daily-react",
  "version": "0.0.0-semantically-released",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "storybook build",
    "clean": "rm -rf .turbo node_modules",
    "dev": "storybook dev -p 6006 --no-open",
    "lint": "eslint ./stories/*.stories.tsx --max-warnings 0 --no-warn-ignored",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --check . --write",
    "preview-storybook": "serve storybook-static",
    "ui:local:lib": "pnpm add @kurocado-studio/ui-research-and-development@file:../../../design-system/packages/ui",
    "ui:canary:lib": "pnpm add @kurocado-studio/ui-research-and-development@canary",
    "ui:published:lib": "pnpm add @kurocado-studio/ui-research-and-development@latest",
    "ui:local:sync": "cd ../../../design-system/packages/ui && pnpm run build && cd - && pnpm install @kurocado-studio/ui-research-and-development@file:../../../design-system/packages/ui"
  },
  "dependencies": {
    "@kurocado-studio/ui-react-research-and-development": "1.0.0-develop.2",
