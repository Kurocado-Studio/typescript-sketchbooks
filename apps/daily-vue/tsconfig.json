{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["@internal/config/tsconfig.web.json"],
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "rootDir": "../../",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@ui": ["../../internal/ui/src/index.ts"]
    }
  },
  "include": [
    "./.storybook/**/*",
    "tailwind.config.ts",
    "vite.config.ts",
    "src",
    "./stories/**/*"
  ]
}
